{
  "name": "statusbar-toggle",
  "displayName": "statusbar-toggle",
  "description": "toggle the status bar with the tags",
  "license": "MIT",
  "publisher": "sam44323",
  "version": "0.0.11",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sam44323/status-bar-toggle"
  },
  "bugs": {
    "url": "https://github.com/Sam44323/status-bar-toggle/issues"
  },
  "icon": "icon.png",
  "contributes": {
    "colors": [
    {
      "id": "statusbarToggle.attackerBackground",
      "description": "Status bar background for ATTACKER",
      "defaults": {
        "dark": "#8B0000",
        "light": "#FF4444",
        "highContrast": "#FF0000"
      }
    },
    {
      "id": "statusbarToggle.userBackground",
      "description": "Status bar background for USER",
      "defaults": {
        "dark": "#006400",
        "light": "#00AA00",
        "highContrast": "#00FF00"
      }
    },
    {
      "id": "statusbarToggle.correctExecutionBackground",
      "description": "Status bar background for CORRECT-EXECUTION",
      "defaults": {
        "dark": "#006400",
        "light": "#228B22",
        "highContrast": "#00FF00"
      }
    },
    {
      "id": "statusbarToggle.defaultBackground",
      "description": "Status bar background for DEFAULT",
      "defaults": {
        "dark": "#1E1E1E",
        "light": "#F3F3F3",
        "highContrast": "#000000"
      }
    }
  ],
    "commands": [
      {
        "command": "statusbarToggle.selectState",
        "title": "Select Status Bar State"
      },
      {
        "command": "statusbarToggle.addFlowInfo",
        "title": "Add the Current-Flow Information"
      },
      {
        "command": "statusbarToggle.addReminder",
        "title": "Add A Reminder"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
